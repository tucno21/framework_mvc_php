<IfModule mod_rewrite.c>
    RewriteEngine On

    #index.php sera el principal documento
    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    ##Si la petici√≥n es index.php, redirigir a index.php
    #RewriteRule ^(.*)$ index.php/$1 [L]
    RewriteRule ^(.*)$ index.php?/$1 [L]
</IfModule>